<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Combat Extended</li>
		</mods>
		<match Class="PatchOperationFindMod">
			<mods>
				<li>Barbarians MO Submod</li>
			</mods>
			<match Class="PatchOperationSequence">
				<operations>

					<!-- Barbarian Leather Coat -->
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="pphhyy_Barbarian_BarbTribal" or defName="pphhyy_Barbarian_LeatherShirt"]/statBases</xpath>
						<value>
							<Bulk>10</Bulk>
							<WornBulk>3</WornBulk>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="pphhyy_Barbarian_BarbTribal" or defName="pphhyy_Barbarian_LeatherShirt"]/statBases/StuffEffectMultiplierArmor</xpath>
						<value>
							<StuffEffectMultiplierArmor>5</StuffEffectMultiplierArmor>
						</value>
					</li>

					<!-- Barbarian Leather Coat -->
					<li Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[defName="pphhyy_Barbarian_RustedChain"]/statBases</xpath>
						<value>
							<Bulk>10</Bulk>
							<WornBulk>3</WornBulk>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="pphhyy_Barbarian_RustedChain"]/statBases/StuffEffectMultiplierArmor</xpath>
						<value>
							<StuffEffectMultiplierArmor>2</StuffEffectMultiplierArmor>
						</value>
					</li>

					<li Class="PatchOperationReplace">
						<xpath>Defs/ThingDef[defName="pphhyy_Barbarian_RustedChain"]/apparel/layers</xpath>
						<value>
							<layers>
								<li>Middle</li>
							</layers>
						</value>
					</li>

				</operations>
			</match>
		</match>
	</Operation>

</Patch>